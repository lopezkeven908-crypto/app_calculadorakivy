# Este es el diseño visual de la calculadora
<CalculatorLayout>:
    orientation: 'vertical'  # Organiza los elementos en columna
    padding: 10              # Espacio interno alrededor
    spacing: 10              # Espacio entre widgets

    # Etiqueta para mostrar el resultado
    Label:
        id: result
        text: '0'
        font_size: 40
        size_hint_y: 0.2
        halign: 'right'
        valign: 'middle'
        text_size: self.size

    # GridLayout para los botones
    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: 0.8

        # Fila 1: AC, C, ÷
        Button:
            text: 'AC'
            background_color: 1, 0, 0, 1
            on_press: root.on_button_press(self)
        Button:
            text: 'C'
            background_color: 1, 0, 0, 1
            on_press: root.on_button_press(self)
        Button:
            text: '÷'
            background_color: 0, 1, 0, 1
            on_press: root.on_button_press(self)
        Widget:

        # Fila 2: 7, 8, 9, +
        Button:
            text: '7'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '8'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '9'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '+'
            background_color: 0, 1, 0, 1
            on_press: root.on_button_press(self)

        # Fila 3: 4, 5, 6, -
        Button:
            text: '4'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '5'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '6'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '-'
            background_color: 0, 1, 0, 1
            on_press: root.on_button_press(self)

        # Fila 4: 1, 2, 3, +
        Button:
            text: '1'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '2'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '3'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '+'
            background_color: 0, 1, 0, 1
            on_press: root.on_button_press(self)

        # Fila 5: 0, =
        Button:
            text: '0'
            background_color: 0, 0, 1, 1
            on_press: root.on_button_press(self)
        Button:
            text: '='
            background_color: 1, 0, 0, 1
            on_press: root.on_button_press(self)
        Widget:
        Widget: