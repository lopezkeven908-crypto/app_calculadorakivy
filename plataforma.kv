<CalculatorApp>:
   BoxLayout:
      orientation: 'vertical'
      TextInput:
         id: input_box
         multiline: False
         font_size: 32
         size_hint_y: 0.2
         halign: 'right'
         readonly: True

      GridLayout:
         cols: 4
         rows: 5
         Button:
            id: btn_7
            text: '7'
         Button:
            id: btn_8
            text: '8'
         Button:
            id: btn_9
            text: '9'
         Button:
            id: btn_divide
            text: '/'

         Button:
            id: btn_4
            text: '4'
         Button:
            id: btn_5
            text: '5'
         Button:
            id: btn_6
            text: '6'
         Button:
            id: btn_multiply
            text: '*'

         Button:
            id: btn_1
            text: '1'
         Button:
            id: btn_2
            text: '2'
         Button:
            id: btn_3
            text: '3'
         Button:
            id: btn_subtract
            text: '-'

         Button:
            id: btn_clear
            text: 'C'
         Button:
            id: btn_0
            text: '0'
         Button:
            id: btn_equals
            text: '='
         Button:
            id: btn_add
            text: '+'