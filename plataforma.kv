<CalculadoraLayout>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Fondo negro
            Rectangle:
                pos: self.pos
                size: self.size

        Image:  # Logo o ícono del plantel
            source: 'ID2227887.png'
            size_hint: None, None
            size: root.width * 0.15, root.width * 0.15
            pos_hint: {'x': 0.02, 'top': 1}

        Label:  # Título de la calculadora
            text: 'Calculadora Cbta131'
            font_size: '20sp'
            size_hint: None, None
            size: root.width * 0.8, root.height * 0.08
            pos_hint: {'center_x': 0.5, 'top': 1}
            color: 1, 1, 1, 1
       
       
       
        Label:  # Pantalla donde se muestra el resultado
            id: result
            text: '0'
            font_size: '35sp'
            size_hint: None, None
            size: root.width * 0.9, root.height * 0.12
            pos_hint: {'center_x': 0.5, 'top': 0.93}  # Separado de los botones
            color: 1, 1, 1, 1
            halign: 'right'
            valign: 'middle'
            text_size: self.size 
        Button:
            text: 'AC'
            font_size: '18sp'
            size_hint: None, None
            size: root.width * 0.20, root.width * 0.20
            pos_hint: {'x': 0.06, 'y': 0.64}
            background_normal: ''
            background_color: 0, 0, 0, 0
            on_press: root.on_button_press(self)
            canvas.before:
                Color:
                    rgba: 1, 0, 0, 1
                Ellipse:
                    pos: self.pos
                    size: self.size

        Button:
